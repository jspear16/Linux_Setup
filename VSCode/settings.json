{
    "workbench.colorTheme": "Tomorrow Night Blue",
    "editor.minimap.size": "fit",
    "makefile.configureOnOpen": true,
    "workbench.colorCustomizations": {
        "editorLineNumber.activeForeground": "#ff6666",
        "editorBracketMatch.border": "#059e00b2",
        // "editorGutter.background": "#0000003b",
        // "minimap.background":  "#0000003b",
        "tab.border":  "#000000",
        "editorGroupHeader.tabsBorder": "#000000",
        "editorGroupHeader.border": "#000000",
        "sideBar.border": "#000000",
        "tab.activeBackground": "#00000048"
    },
    "editor.renderLineHighlight": "all",
	"editor.smoothScrolling": true,
    "editor.insertSpaces": false,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
	"workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.tabSizing": "shrink",
    "workbench.hover.delay": 100,
	"workbench.startupEditor": "none",
	"window.menuBarVisibility": "hidden",
	"window.newWindowDimensions": "maximized",
	"window.title": "${dirty}${rootName}${separator}${activeEditorShort} ${dirty}",
	"editor.tabCompletion": "onlySnippets",
    "editor.fontSize": 16,
	"files.insertFinalNewline": true,
	"editor.guides.bracketPairs": "active",
	"editor.hover.delay": 100,
	"editor.hover.hidingDelay": 50,
    "window.zoomLevel": 1,
    "diffEditor.ignoreTrimWhitespace": false,
    // "editor.fontFamily": "'Futura','Droid Sans Mono', 'monospace', monospace",
    // "editor.fontFamily": "'Anonymous Pro', 'Futura Bk BT','Droid Sans Mono', 'monospace', monospace",
	// "editor.letterSpacing": -1,
}
